 {
 	"name": "MTG Chrome Companion",
 	"manifest_version": 2,
	"version": "2.49",
	"author": "Nicolas Pihen",
	"description": "Get your MTG Desktop Companion embedded in your chrome browser !",
	"permissions": [
		"activeTab",
		"declarativeContent",
		"storage",
		"background",
		"<all_urls>"
	],
	"background": {
		"persistent": false,
		"scripts": [
			"js/background.js",
			"libs/jquery-3.3.1.min.js"
		]
	},
	
	"options_page": "html/options.html",
	
	"content_scripts": [
	  {
	    "matches": ["<all_urls>"],
	    "run_at": "document_end",
	    "js": ["js/service.js"],
	    "all_frames": true
	  }
	 ],
	
	"browser_action": {
		"default_popup": "html/popup.html",
		"default_icon": {
			"32": "img/logo.png"
		}
	},
	"icons": {
		"32": "img/logo.png",
		"48": "img/logo.png"
	}
}